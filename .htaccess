ErrorDocument 404 "/errorpages/404.php"
ErrorDocument 403 "/errorpages/403.php"

#URL redirection and clean up
<IfModule mod_rewrite.c>
RewriteEngine On

RewriteRule ^/?([a-zA-Z]+)$ sh/index.php?c=$1 [NC]
RewriteRule ^/?sh/([a-zA-Z]+)/([a-zA-Z]+)$ sh/index.php?c=$1&a=$2 [NC]

RewriteRule ^/?DuggaSYS/([a-zA-Z]+)$ sh/index.php?c=$1 [NC]
RewriteRule ^/?DuggaSYS/([a-zA-Z]+)/([a-zA-Z]+)$ sh/index.php?c=$1&a=$2 [NC]

RewriteRule ^/?DuggaSYS/sh/([a-zA-Z]+)$ sh/index.php?c=$1 [NC]
RewriteRule ^/?DuggaSYS/sh/([a-zA-Z]+)/([a-zA-Z]+)$ sh/index.php?c=$1&a=$2 [NC]
</IfModule>